{
  "name": "greymatter",
  "version": "1.0.0",
  "description": "Greymatter website",
  "scripts": {
    "greymatter": "npm install && cd ./site && npm install && cd ../studio && npm install",
    "start": "cd ./site && react-scripts start",
    "sanity": "cd ./studio && sanity start",
    "build": "rm -rf ./build && cd ./site && npm install && react-scripts build && mv build ../",
    "test": "cd site && react-scripts test",
    "eject": "cd site && react-scripts eject",
    "lint:styles": "npx stylelint '**/*.css'",
    "lint": "eslint --no-inline-config --no-error-on-unmatched-pattern -c .eslintrc.json . --ext .js,.jsx"
  },
  "author": "Gustavo Lendimuth",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-react-func": "^0.1.18",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-redux": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.15.0",
    "prettier": "^2.7.1",
    "stylelint": "^14.11.0",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-order": "^5.0.0"
  },
  "dependencies": {
    "@sanity/cli": "^2.33.3",
    "react-scripts": "^5.0.1"
  }
}
